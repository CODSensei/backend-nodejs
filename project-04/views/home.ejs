<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>HomePage</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-3">
            <div class="row row-cols-4">

                <% blogs.forEach(blog=> { %>
                    <div class="col">

                        <div class="card " style="width: 18rem; margin-top: 8px; border: 1px solid white">
                            <img src=<%=blog.coverImageURL %> class="card-img-top" >
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <%- include('./partials/script') %>
</body>

</html>